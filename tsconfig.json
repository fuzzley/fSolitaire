{
    "compilerOptions": {
        "module": "amd",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "outFile": "dist/app.js",
        "outDir": "dist",
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "include": [
        "src/**/*",
        "custom_typings/**/*",
    ],
    "typeRoots": [
        "./node_modules/@types",
        "./custom_typings"
    ]
}
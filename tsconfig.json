{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES6",
        "outDir": "./dist/",
        "lib": ["es5", "es6", "dom"],
        "types" : [
            "jasmine",
        ],
    },
    "exclude": [
        "custom_typings/**/*",
        "node_modules",
        "**/*.spec.ts",
    ],
    "include": [
        "src/**/*",
    ],
    "typeRoots": [
        "./node_modules/@types",
        "./custom_typings",
    ],
}